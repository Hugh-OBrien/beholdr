<script language = "JavaScript">

 function checkAll(ele) {
     var checkboxes = document.getElementsByTagName('input');
     if (checkboxes[3].value=="Check All") {
             console.log(1)
         for (var i = 0; i < checkboxes.length; i++) {
             if (checkboxes[i].type == 'checkbox') {
                 checkboxes[i].checked = true;
             }
         }
     checkboxes[3].value = "Uncheck All";
     } else {
         for (var i = 0; i < checkboxes.length; i++) {
             if (checkboxes[i].type == 'checkbox') {
                 checkboxes[i].checked = false;
             }
         }
             console.log(checkboxes[3])
     checkboxes[3].value = "Check All";
     }
 }

 function validateForm() {
   var x = document.forms["idForm"]["id"];
			     if(x.checkValidity() == false){
			     alert("Name must be filled out");
			     return false;   
			     }
 }

</script>

<form name = "idForm" action="{% url 'iTunesReviews:runReport' %}" onsubmit="return validateForm()" method="post">
